<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_EVENTSHANDLER_COMPONENT_LABEL"
		description="COM_EVENTSHANDLER_COMPONENT_DESC"
	>

        <field name="test"
             type="radio"
             default="1"
             label="COM_EVENTSHANDLER_TEST_LABEL"
             description="COM_EVENTSHANDLER_TEST_DESC">
                 <option value="0">JHIDE</option>
                 <option value="1">JSHOW</option>
         </field>
         
        <field name="languages" 
            type="language" 
            client="site" 
            default="en-GB" 
            label="COM_EVENTSHANDLER_LBL_SELECT_LANGUAGE" 
            description="COM_EVENTSHANDLER_DESC_SELECT_LANGUAGE" />
       
	</fieldset>

	<fieldset name="events"
		description="COM_EVENTSHANDLER_JCONFIG_EVENT_DESC"
		label="COM_EVENTSHANDLER_JCONFIG_EVENT_LABEL">
        
        <field name="color1" 
            type="color" 
            default="#333" 
            label="COM_EVENTSHANDLER_LBL_SELECT_COLOR_1" 
            description="COM_EVENTSHANDLER_DESC_SELECT_COLOR_1" />
        
        <field name="color2" 
            type="color" 
            default="#ffffff" 
            label="COM_EVENTSHANDLER_LBL_SELECT_COLOR_2" 
            description="COM_EVENTSHANDLER_DESC_SELECT_COLOR_2" />
        
        <field name="color3" 
            type="color" 
            default="#999" 
            label="COM_EVENTSHANDLER_LBL_SELECT_COLOR_3" 
            description="COM_EVENTSHANDLER_DESC_SELECT_COLOR_3" />
        
        <field name="eventsdetails"
             type="radio"
             default="1"
             label="COM_EVENTSHANDLER_EVENTS_DETAILS_LABEL"
             description="COM_EVENTSHANDLER_EVENTS_DETAILS_DESC">
                 <option value="0">JNO</option>
                 <option value="1">JYES</option>
         </field>
        
        <field name="eventsorientation"
             type="radio"
             default="1"
             label="COM_EVENTSHANDLER_EVENTS_ORIENTATION_LABEL"
             description="COM_EVENTSHANDLER_EVENTS_ORIENTATION_DESC">
                 <option value="0">COM_EVENTSHANDLER_VERTICAL</option>
                 <option value="1">COM_EVENTSHANDLER_HORIZONTAL</option>
         </field>
        

	</fieldset>

	<fieldset addfieldpath="/administrator/components/com_eventshandler/models/fields"
            name="summary"
            label="COM_EVENTSHANDLER_JCONFIG_SUMMARY_LABEL"
            description="COM_EVENTSHANDLER_JCONFIG_SUMMARY_DESC">
            <field
                name="specials_id"
                type="specialcheck"
                label="COM_EVENTSHANDLER_LBL_SELECT_SPECIALS"
                require="true"
                description="COM_EVENTSHANDLER_DESC_SELECT_SPECIALS">
            </field>
    </fieldset>
	
	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field 
            name="rules" 
            type="rules"
			component="com_eventshandler"
            class="inputbox"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
		
	</fieldset>

</config>
